<!DOCTYPE html>
<html lang="en">
<head>
    <% include('head'); %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Editar post</title>
</head>
<body>
    <% include('menu'); %>
    <div class="container">
        <div class="d-flex p-3">
            <h2>Editar post</h2>
        </div>
        <div class="d-flex row">
            <% posts.forEach((post) => { %>
                <form action="/edit/<%= post.id %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group p-4">
                        <label for="id">ID:</label>
                        <input type="text" class="form-control" name="id" value="<%= post.id %>" disabled>
                    </div>
                    <div class="form-group p-4">
                        <label for="titulo">Titulo:</label>
                        <input type="text" class="form-control" name="titulo" value="<%= post.titulo %>">
                    </div>
                    <div class="form-group p-4">
                        <label for="descricao">Descricao:</label>
                        <input type="text" class="form-control" name="descricao" value="<%= post.descricao %>">
                    </div>
                    <div class="form-group p-4">
                        <label for="imagemAtual">Imagem atual:</label>
                        <br/>
                        <img src="/imagens/<%= post.imagem %>" alt="imagem" width="100px" height="100px">
                        <br><br/>
                        <label for="imagem">Imagem:</label>
                        <br/>
                        <input type="file" class="form-control" name="imagem" value="<%= post.imagem %>">
                    </div>
                    <div class="d-flex justify-content-center p-4">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            <% }) %>
        </div>
    </div>

    </div>
</body>
</html>